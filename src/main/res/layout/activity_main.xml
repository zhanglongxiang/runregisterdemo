            android:text="内容清空"/>
        <Button
            android:id="@+id/button_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="学习笔画"/>
        <Button
            android:id="@+id/button_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
